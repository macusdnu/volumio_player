  "sections": [
    {
      "id": "pcf_section",
      "element": "section",
      "label": "PCF8575 Settings",
      "onSave": {
        "type": "controller",
        "endpoint": "system_hardware/i2c-radio-buttons",
        "method": "savePCFConfig"
      },
      "saveButton": {
        "label": "Save",
        "saveOnChange": false,
        "data": [
          "pcf8575_enabled",
          "pcf8575_addr"
        ]
      },
      "content": [
        {
          "id": "pcf8575_enabled",
          "element": "switch",
          "label": "Enable PCF8575 Expander",
          "value": false
        },
        {
          "id": "pcf8575_addr",
          "element": "input",
          "label": "I2C Address",
          "value": "0x20",
          "description": "Default 0x00 (A0-A2 = 000)"
        }
      ]
    },
